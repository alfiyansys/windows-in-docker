#!/usr/bin/env python3

from enum import Enum
from argparse import ArgumentParser, Namespace
from ipaddress import IPv4Address, ip_address
from os import environ
from subprocess import run
from typing import List, Iterable, Tuple


class State(Enum):
  on = "on"
  off = "off"


def call(prog: str, *args: List[str]) -> bytes:
  ret = run([prog, *args])
  if ret.returncode != 0:
    exit(ret.returncode)


def parse_args() -> Namespace:
  parser = ArgumentParser()
  parser.add_argument("--bridge", required=True)
  parser.add_argument("--ip", required=True, type=ip_address)
  parser.add_argument("--state", required=True,
                      choices=(State.on, State.off), type=State)
  return parser.parse_args()


def ip_table(bridge: str, ip: IPv4Address, state: State, port_range: Tuple[int, int]) -> None:
  action = "--insert" if state == State.on else "--delete"
  lo, hi = port_range

  def chain1(protocol: str) -> Iterable[str]:
    return ("iptables",
            "--table", "filter",
            action, "FORWARD",
            "--out-interface", bridge,
            "--protocol", protocol,
            "--match", "multiport",
            "--destination", str(ip),
            "--destination-ports", f"{lo}:{hi}",
            "--jump", "ACCEPT")

  def chain2(protocol: str) -> Iterable[str]:
    return ("iptables",
            "--table", "nat",
            action, "PREROUTING",
            "--protocol", protocol,
            "--match", "multiport",
            "--destination-ports", f"{lo}:{hi}",
            "--jump", "DNAT",
            "--to", f"{ip}:{lo}-{hi}")

  call(*chain1("tcp"))
  call(*chain1("udp"))
  call(*chain2("tcp"))
  call(*chain2("udp"))


def main() -> None:
  args = parse_args()
  ranges = [(1, 52),
            (54, 66),
            (69, 65000)]
  for port_range in ranges:
    ip_table(bridge=args.bridge,
             ip=args.ip,
             state=args.state,
             port_range=port_range)


main()

