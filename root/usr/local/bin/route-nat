#!/usr/bin/env python3

from enum import Enum
from argparse import ArgumentParser, Namespace
from ipaddress import IPv4Address, ip_address
from os import environ
from subprocess import run
from typing import List, Iterable


class State(Enum):
  on = "on"
  off = "off"


def call(prog: str, *args: List[str]) -> bytes:
  ret = run([prog, *args])
  if ret.returncode != 0:
    exit(ret.returncode)


def parse_args() -> Namespace:
  parser = ArgumentParser()
  parser.add_argument("--bridge", required=True)
  parser.add_argument("--ip", required=True, type=ip_address)
  parser.add_argument("--state", required=True,
                      choices=(State.on, State.off), type=State)
  return parser.parse_args()


def ip_table(bridge: str, ip: IPv4Address, state: State) -> None:
  action = "--append" if state == State.on else "--delete"
  port_range = "1:65000"

  def chain1(protocol: str) -> Iterable[str]:
    return ("iptables",
            "--table", "filter",
            action, "FORWARD",
            "--out-interface", bridge,
            "--protocol", protocol,
            "--match", "multiport",
            "--destination", str(ip),
            "--destination-ports", port_range,
            "--jump", "ACCEPT")

  def chain2(protocol: str) -> Iterable[str]:
    return ("iptables",
            "--table", "nat",
            action, "PREROUTING",
            "--protocol", protocol,
            "--match", "multiport",
            "--destination-ports", port_range,
            "--jump", "DNAT",
            "--to", f"{ip}")

  call(*chain1("tcp"))
  call(*chain1("udp"))
  call(*chain2("tcp"))
  call(*chain2("udp"))


def main() -> None:
  args = parse_args()
  ip_table(bridge=args.bridge,
           ip=args.ip,
           state=args.state)


main()

